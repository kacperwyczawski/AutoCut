@using AutoCut.Core.Panels

@* padding on x axis have to be zero *@
<MudContainer Fixed="true" Class="px-0 my-4 gap-4 d-flex flex-row flex-wrap">
    @foreach (var panel in _panels)
    {
        <MudPaper>
            <MudStack Row="true" Class="pa-2" AlignItems="AlignItems.Center">
                <MudText>
                    <b>@panel.Panel.Rectangle.Length</b>
                </MudText>
                <MudText>
                    ✕
                </MudText>
                <MudText>
                    <b>@panel.Panel.Rectangle.Width</b>
                </MudText>
                <MudText>
                    ✕
                </MudText>
                <MudText>
                    <b>@panel.Quantity</b>
                </MudText>
                @if (panel.Panel.EdgeBanding.Top)
                {
                    <MudIcon Icon="@Icons.Material.Filled.BorderTop"/>
                }
                @if (panel.Panel.EdgeBanding.Bottom)
                {
                    <MudIcon Icon="@Icons.Material.Filled.BorderBottom"/>
                }
                @if (panel.Panel.EdgeBanding.Left)
                {
                    <MudIcon Icon="@Icons.Material.Filled.BorderLeft"/>
                }
                @if (panel.Panel.EdgeBanding.Right)
                {
                    <MudIcon Icon="@Icons.Material.Filled.BorderRight"/>
                }
                <MudIconButton
                    Icon="@Icons.Material.Outlined.Delete"
                    Color="Color.Error"
                    Size="Size.Small"/>
            </MudStack>
        </MudPaper>
    }
</MudContainer>

@code
{
    // temporary data
    private readonly List<CompressedPanel> _panels = Enumerable.Repeat(
        new CompressedPanel(
            new Panel(
                new Rectangle(100, 100),
                new EdgeBanding(true, true, false, false)),
            1),
        60).ToList();
}